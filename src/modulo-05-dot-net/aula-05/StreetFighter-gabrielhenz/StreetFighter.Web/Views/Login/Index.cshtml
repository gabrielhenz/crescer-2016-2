@model StreetFighter.Web.Models.UsuarioLogadoModel
@{
    ViewBag.Title = "Login";
    ViewBag.PageTitle = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("FazerLogin", "Login", FormMethod.Post, new { @class = "form-horizontal", style = "margin-right: 20px; padding-bottom: 10px;" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("login", "Login: ", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBox("login", "", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("senha", "Senha: ", new { @class = "col-sm-2 control-label"})
        <div class="col-sm-10">
            @Html.Password("senha", "", new { @class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Entrar</button>
        </div>
    </div>
}


