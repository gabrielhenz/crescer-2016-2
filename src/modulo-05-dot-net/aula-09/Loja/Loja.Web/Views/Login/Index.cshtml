
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>
<h4 style="color: red;">@ViewBag.LoginErro</h4>
<h4 style="color: red;">@ViewBag.NaoAutorizado</h4>
@using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.TextBox("email", "", new { placeholder = "email" })
    @Html.Password("senha", "", new { placeholder = "senha" })

    <button type="submit">Entrar</button>
}
