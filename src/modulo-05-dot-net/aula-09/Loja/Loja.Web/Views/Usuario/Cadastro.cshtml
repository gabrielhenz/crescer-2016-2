@model Loja.Web.Models.UsuarioModel
@{
    ViewBag.Title = Model != null ? "Edição de conta" : "Cadastro";
}

<h2>@(ViewBag.Id != 0 ? "Edição de Conta" : "Cadastro")</h2>

<h3>@ViewBag.Mensagem</h3>

@using (Html.BeginForm("Salvar", "Usuario", new { Id = ViewBag.Id }, FormMethod.Post, new { @class = "form-horizontal", style = "padding: 5px 15px;" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Ex: goku@bol.com", type = "email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Senha, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Ex: abc12345"})
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Salvar</button>
        </div>
    </div>
}
