@{
    ViewBag.Title = "Home Page";
}

<h2>@TempData["EditadoOuCadastradoOuExcluido"]</h2>

<div style="text-align: right; margin: 20px 10px;">
    <a href="~/Produto/Cadastro" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Novo</a>
</div> 


<table class="table table-striped">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Valor</th>
            <th style="width: 40px;">Editar</th>
            <th style="width: 40px;">Excluir</th>
        </tr>
    </thead>
    @{
        if (ViewBag.ListaVazia != null)
        {
            <tr>
                <td>
                    @ViewBag.ListaVazia
                </td>
            </tr>
        }
    }
    @foreach (var produto in Model.ProdutosModel)
    {
        <tr>
            <td>
                @produto.Nome
            </td>
            <td>
                @produto.Valor
            </td>
            <td>
                <a class="glyphicon glyphicon-pencil" href="~/Produto/Salvar?id=@produto.Id"></a>
            </td>
            <td>
                <a class="glyphicon glyphicon-trash" href="~/Produto/Excluir?id=@produto.Id"></a>
            </td>
        </tr>
    }
</table> 