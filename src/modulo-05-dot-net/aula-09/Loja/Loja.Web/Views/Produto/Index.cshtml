<div style="text-align: right; margin: 20px 10px;">
    <a href="~/Produto/Cadastro" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Novo</a>
</div> 


<table class="table table-striped">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Valor</th>
            <th style="width: 40px;">Editar</th>
            <th style="width: 40px;">Excluir</th>
        </tr>
    </thead>
    @foreach (var produto in Model)
    {
        <tr>
            <td>
                @produto.Nome
            </td>
            <td>
                @produto.Valor
            </td>
            <td>
                <a class="glyphicon glyphicon-pencil" href="~/Produto/Editar?Id=@produto.Id"></a>
            </td>
            <td>
                <a class="glyphicon glyphicon-trash" href="~/Produto/Excluir?Id=@produto.Id"></a>
            </td>
        </tr>
    }
</table> 