@model Loja.Web.Models.ProdutoModel
@{
    ViewBag.Title = "Cadastro";
}

<h2>@ViewBag.CadastroOuEdicao de Ficha Técnica</h2>

<h3>@ViewBag.Mensagem</h3>

@using (Html.BeginForm("Salvar", "StreetFighter", new { Id = @ViewBag.Id }, FormMethod.Post, new { @class = "form-horizontal", style = "padding: 5px 15px;" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", placeholder = "Ex: Batata Frita" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Valor, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", placeholder = "Ex: 18,20" })
            @Html.ValidationMessageFor(model => model.Valor)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Salvar</button>
        </div>
    </div>
}
