
@{
    ViewBag.Title = "Login";
    ViewBag.PageTitle = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    html, body {
      margin: 0;
      height: 100%;
      width:  100%
    }
    body {
      align-items: center;
      display: flex;  
      justify-content: center
    }
    h2{
        margin-top: 0px;
    }
    h3{
        margin-left: 20px;
        color: red;
    }
</style>
<div class="conteudo">
    <h2>Login</h2>
    <h3>@ViewBag.ErroLogin</h3>
    @using (Html.BeginForm("FazerLogin", "StreetFighter", FormMethod.Post, new { @class = "form-horizontal", style = "margin-right: 20px; padding-bottom: 10px; margin-left: -10px;" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("login", "Login: ", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBox("login", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("senha", "Senha: ", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.Password("senha", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Entrar</button>
            </div>
        </div>
    }
</div>



